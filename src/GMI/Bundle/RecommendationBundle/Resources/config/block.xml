<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="gmi_recommendation.block.post_by_recommendation.class">GMI\Bundle\RecommendationBundle\Block\PostByRecommendationBlockService</parameter>
    </parameters>

    <services>
        <service id="gmi_recommendation.block.post_by_recommendation" class="%gmi_recommendation.block.post_by_recommendation.class%" scope="prototype">
            <tag name="sonata.block"/>
            <argument>rz_news.block.post_by_category</argument>
            <argument type="service" id="templating" />
            <argument type="service" id="sonata.classification.manager.category" />
            <argument type="service" id="sonata.classification.admin.category" />
            <argument type="service" id="sonata.news.manager.post" />
            <argument>%gmi_recommendation.block.post_by_recommendation.templates%</argument>
            <argument>%gmi_recommendation.block.post_by_recommendation.ajax_templates%</argument>
            <argument>%gmi_recommendation.block.post_by_recommendation.ajax_pager_templates%</argument>
            <argument>%rz_news.settings.news_pager_max_per_page%</argument>
            <argument>%rz_classification.enable_controllers%</argument>
            <argument>%rz_classification.settings.category.enable_category_canonical_page%</argument>
            <argument type="service" id="gmi_recommendation.manager.session" />
        </service>
    </services>
</container>
