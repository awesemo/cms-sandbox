<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
		<parameter key="gmi_recommendation.manager.session.class">GMI\Bundle\RecommendationBundle\Services\SessionManager</parameter>
    </parameters>

    <services>
        <service id="gmi_recommendation.manager.session" class="%gmi_recommendation.manager.session.class%">
			<argument type="service" id="session" />
			<argument type="service" id="request_stack" />
            <argument type="service" id="gmi_recommendation.config.profiler" />
            <argument type="service" id="security.token_storage" />
            <argument type="service" id="security.authorization_checker" />
            <argument type="service" id="gmi_recommendation.manager.cloud" />
            <argument type="service" id="gmi_recommendation.manager.cloud_category" />
            <argument type="service" id="gmi_recommendation.manager.cloud_tag" />
            <argument type="service" id="gmi_recommendation.manager.cloud_logs" />
            <argument type="service" id="endroid.prediction_io.app_one.event_client" />
            <argument type="service" id="endroid.prediction_io.app_one.recommendation.engine_client" />
        </service>
    </services>

</container>
