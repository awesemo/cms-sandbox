<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">


    <parameters>
        <parameter key="gmi_recommendation.admin.cloud.class">GMI\Bundle\RecommendationBundle\Admin\CloudAdmin</parameter>
        <parameter key="gmi_recommendation.admin.cloud_category.class">GMI\Bundle\RecommendationBundle\Admin\CloudCategoryAdmin</parameter>
        <parameter key="gmi_recommendation.admin.cloud_profile.class">GMI\Bundle\RecommendationBundle\Admin\CloudProfileAdmin</parameter>
        <parameter key="gmi_recommendation.admin.cloud_logs.class">GMI\Bundle\RecommendationBundle\Admin\CloudLogsAdmin</parameter>
    </parameters>

    <services>
		<service id="gmi_recommendation.admin.cloud" class="%gmi_recommendation.admin.cloud.class%">
			<tag name="sonata.admin" manager_type="orm" group="gmi_recommendation.admin.group" label="Cloud" />
			<argument />
			<argument>%gmi_recommendation.admin.cloud.entity%</argument>
			<argument />
		</service>

        <service id="gmi_recommendation.admin.cloud_category" class="%gmi_recommendation.admin.cloud_category.class%">
            <tag name="sonata.admin" manager_type="orm" group="gmi_recommendation.admin.group" label="Cloud Category" />
            <argument />
            <argument>%gmi_recommendation.admin.cloud_category.entity%</argument>
            <argument />
        </service>

        <service id="gmi_recommendation.admin.cloud_profile" class="%gmi_recommendation.admin.cloud_profile.class%">
            <tag name="sonata.admin" manager_type="orm" group="gmi_recommendation.admin.group" label="Cloud Profile" />
            <argument />
            <argument>%gmi_recommendation.admin.cloud_profile.entity%</argument>
            <argument />
        </service>

        <service id="gmi_recommendation.admin.cloud_logs" class="%gmi_recommendation.admin.cloud_logs.class%">
            <tag name="sonata.admin" manager_type="orm" group="gmi_recommendation.admin.group" label="Cloud Profile" />
            <argument />
            <argument>%gmi_recommendation.admin.cloud_logs.entity%</argument>
            <argument />
        </service>
    </services>
</container>
