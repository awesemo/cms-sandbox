<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="gmi_recommendation.event_listener.authentication.class">GMI\Bundle\RecommendationBundle\Events\Listeners\AuthenticationListener</parameter>
    </parameters>

    <services>
        <service id="gmi_recommendation.event_listener.authentication" class="%gmi_recommendation.event_listener.authentication.class%">
            <tag name="kernel.event_listener" event="security.interactive_login" method="onAuthenticationSuccess"/>
            <argument type="service" id="gmi_recommendation.manager.session" />
        </service>
    </services>

</container>
