<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="gmi_recommendation.event_subscriber.kernel.class">GMI\Bundle\RecommendationBundle\Events\Subscribers\KernelEventSubscriber</parameter>
        <parameter key="gmi_recommendation.event_subscriber.user_registration.class">GMI\Bundle\RecommendationBundle\Events\Subscribers\UserRegistrationEventSubscriber</parameter>
        <parameter key="gmi_recommendation.event_subscriber.cloud_update.class">GMI\Bundle\RecommendationBundle\Events\Subscribers\CloudUpdateSubscriber</parameter>
    </parameters>

    <services>
        <service id="gmi_recommendation.event_subscriber.kernel" class="%gmi_recommendation.event_subscriber.kernel.class%">
            <tag name="kernel.event_subscriber" />
            <argument type="service" id="gmi_recommendation.manager.session" />
        </service>
        <service id="gmi_recommendation.event_subscriber.user_registration" class="%gmi_recommendation.event_subscriber.user_registration.class%">
            <tag name="kernel.event_subscriber" />
            <argument type="service" id="gmi_recommendation.manager.session" />
        </service>

        <service id="gmi_recommendation.event_subscriber.cloud_update" class="%gmi_recommendation.event_subscriber.cloud_update.class%">
            <tag name="kernel.event_subscriber" />
            <argument type="service" id="gmi_recommendation.manager.session" />
        </service>
    </services>

</container>
